    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "EXCITED": "true",
                "DATABASE_URL": "postgresql://postgres@localhost:5432/cinema",
                "AUTH0_DOMAIN": "michelangelomarani.eu.auth0.com",
                "API_AUDIENCE": "cinema"
            },
            "args": [
                "run",
                "--no-debugger",
                "--reload"
            ],
            "preLaunchTask": "venv-activate",
            "jinja": true,
            "justMyCode": true
        }
    ]
}